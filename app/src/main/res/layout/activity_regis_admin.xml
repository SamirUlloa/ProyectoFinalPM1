<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ActivityAdmin.ActivityRegisAdmin">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:text="Registrar un Administrador"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagFotoAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnAdminImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_margin="10dp"
                android:text="Agregar Foto de Perfil" />

            <EditText
                android:id="@+id/txtAdminNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtAdminApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Apellido"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtAdminTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Teléfono"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtAdminDirec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Dirección"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtAdminCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Correo"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtAdminContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Contraseña"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnAdminCrear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_margin="10dp"
                android:text="Registrar el Usuario" />

            <Button
                android:id="@+id/btnAdminCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_margin="10dp"
                android:text="Regresar al Menú" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>