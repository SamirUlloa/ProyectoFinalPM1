<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ActivityAdmin.ActivityRegisRepartidor">

    <TextView
        android:id="@+id/textViewRepaT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Registrar un Repartidor"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <ScrollView
        android:id="@+id/scrolRepa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgFotoRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnRepartImagen"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Agregar Imagen" />

            <EditText
                android:id="@+id/txtReparNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtReparApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:ems="10"
                android:hint="Apellido"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtReparTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:ems="10"
                android:hint="Teléfono"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtReparDirec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:ems="10"
                android:hint="Dirección"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtReparCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_margin="10dp"

                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtReparContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contraseña"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_margin="10dp"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnReparCrear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Crear Usuario" />

            <Button
                android:id="@+id/btnReparCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:text="Regresar al Menu" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>